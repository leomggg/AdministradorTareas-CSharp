        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            x:Name="etiqueta" />

        <CollectionView ItemsSource="{Binding Categoria}" SelectionMode="Single">
